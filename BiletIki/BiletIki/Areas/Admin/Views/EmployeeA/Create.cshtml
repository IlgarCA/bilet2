@model Employee

@{
    ViewData["Title"] = "Create";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Employee</h4>
                        <form class="forms-sample"method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Level">Level</label>
                                <input asp-for="Level" class="form-control" placeholder="Level">
                                <span asp-validation-for="Level" class="text-text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Bio">Bio</label>
                                <input asp-for="Bio" class="form-control" placeholder="Bio">
                                <span asp-validation-for="Bio" class="text-text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FormFile">FormFile</label>
                                <input asp-for="FormFile" class="form-control" placeholder="Bio">
                                <span asp-validation-for="FormFile" class="text-text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light" asp-action="Index">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
