@model List<Employee>

@{
    ViewData["Title"] = "Employee";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Striped Table</h4>
                        <a class="btn btn-primary sm2" asp-action="Create">
                            <i class="mdi mdi-table-edit"></i>
                        </a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            Avatar
                                        </th>
                                        <th>
                                            Full Name
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Employee employee in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/assets/img/team/@employee.Img" alt="image" />
                                            </td>
                                            <td>
                                                @employee.Name
                                            </td>
                                            <td>
                                                <a class="btn btn-danger sm2" asp-action="Update" asp-route-id="@employee.Id">
                                                    <i class="mdi mdi-tooltip-edit"></i>
                                                </a>
                                                <a class="btn btn-warning sm2" asp-action="Delete" asp-route-id="@employee.Id">
                                                    <i class="mdi mdi-delete"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
